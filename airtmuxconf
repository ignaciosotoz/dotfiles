# tmux-statusbar
set -g default-terminal "screen-256color"
set -g status-bg colour8
set -g status-justify left
set -g status-left-length 50
set -g status-right-length 150
set -g status-left '#[bg=colour16, fg=colour8, bold] #H #[bg=colour8,fg=colour16,bold]#{?client_prefix,#[bg=colour0]#[fg=colour16],} #S #{?client_prefix,#[fg=colour17],}#{?window_zoomed_flag,â–£ ,}'
set -g status-right " #[fg=colour0, bg=colour8] #{spotify_artist} - #{spotify_track} | #[fg=colour0,bg=colour8]%D | %H:%M | #{battery_icon} #{battery_percentage} "
set -g window-status-format "#[fg=colour0] #I #W #[fg=colour0]"
setw -g window-status-current-attr bold
setw -g window-status-current-format "#[bg=colour0] #[fg=colour16,bold]#[bg=colour0]#I#[fg=colour8]:#W "
