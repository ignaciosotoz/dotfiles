# This tmux statusbar config was created by tmuxline.vim
# on Sat, 06 Jan 2018

set -g status-justify "centre"
set -g status "on"
set -g status-attr "none"
set -g message-command-bg "colour6"
set -g status-left-length "100"
set -g pane-active-border-fg "colour6"
set -g status-bg "colour0"
set -g message-command-fg "colour6"
set -g pane-border-fg "colour6"
set -g message-bg "colour0"
set -g status-left-attr "none"
set -g status-right-attr "none"
set -g status-right-length "100"
set -g message-fg "colour6"
setw -g window-status-fg "colour6"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "colour0"
setw -g window-status-activity-attr "underscore"
setw -g window-status-activity-fg "colour6"
setw -g window-status-separator ""
setw -g window-status-bg "colour0"
set -g status-left "#[fg=colour0,bg=colour0,nounderscore,noitalics,bold]##[fg=colour11,bg=colour0,bold]#S#[fg=colour6,bg=colour0]@#[fg=colour6,bg=colour0,bold]#H#[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour6,bg=colour0]#[fg=colour7,bg=colour0] #[fg=colour0,bg=colour,nounderscore,noitalics,bold]#{prefix_highlight}"
set -g status-right "#[fg=colour4, bg=colour0]#{spotify_artist} - #{spotify_track} |#[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour4,bg=colour0]%H:%M|%a %h-%d|#{battery_status_fg}#{battery_percentage}"
setw -g window-status-format "#[fg=colour4,bg=colour0,nobold,nounderscore,noitalics] #I:#W #[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour0,bg=colour6,bold,nounderscore,noitalics]#[fg=,bg=colour0] #I:#W #[fg=colour0,bg=colour0,bold,nounderscore,italics]"
